@model MarcacaoViewModel

@{
    ViewData["Title"] = "Marcar atendimento";
}

<h2>@ViewData["Title"]</h2>

<h4>Marcações</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Agendar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Clientes" class="control-label"></label>
                @Html.DropDownListFor(m => m.Marcacao.IdCliente,
                                                 new SelectList(Model.Clientes.Select(x => new { Value = x.IdCliente, Text = x.Nome }), "Value", "Text"), "Selecione o cliente",
                                                 htmlAttributes: new { @class = "form-control" })
                <span asp-validation-for="Marcacao.Cliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a class="btn btn-primary" asp-controller="Cliente" asp-action="Cadastrar">Cadastrar novo cliente</a>
            </div>
            <div class="form-group">
                <label class="control-label">Data da marcação</label>
                <input asp-for="Marcacao.DataMarcacao" class="form-control" />
                <span asp-validation-for="Marcacao.DataMarcacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input class="btn btn-success" type="submit" value="Cadastrar" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

