@model MarcacaoViewModel

@{
    ViewData["Title"] = "Apagar";
}

<h2>@ViewData["Title"]</h2>

<h3>Tem certeza que deseja cancelar o serviço?</h3>
<div>
    <h4>Cancelamento</h4>
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Marcacao.Cliente.Nome)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Marcacao.Cliente.Nome)
        </dd>
        <dt>
            Data da marcação
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Marcacao.DataMarcacao)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.EnumTipoServico)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.EnumTipoServico)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Marcacao.Cliente.Celular)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Marcacao.Cliente.Celular)
        </dd>

    </dl>

    <form asp-action="Apagar">
        <input type="hidden" asp-for="Marcacao.IdMarcacao" />
        <input type="submit" value="Cancelar" class="btn btn-default" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
